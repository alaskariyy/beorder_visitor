<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/close_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/min"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scanBarcode"
        android:gravity="center"
        android:layout_above="@+id/orderBerjalan"
        android:layout_alignRight="@+id/orderBerjalan"
        android:layout_alignEnd="@+id/orderBerjalan"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Scan barcode"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:textColor="#FFC107"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView3"
            android:src="@drawable/barcode_button"
            android:layout_above="@+id/close_action_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/orderBerjalan"
        android:gravity="center"
        android:layout_above="@+id/close_action_button"
        android:layout_alignRight="@+id/close_action_button"
        android:layout_alignEnd="@+id/close_action_button">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Order berjalan"
            android:layout_marginRight="5dp"
            android:textSize="20dp"
            android:textColor="#FFC107" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView4"
            android:layout_above="@+id/imageView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/bill_button"
            android:layout_gravity="bottom" />
    </LinearLayout>

</RelativeLayout>